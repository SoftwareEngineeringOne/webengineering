extends ../layout

block scripts
  script(src="/js/auth/login.js", type="module")

block content
  .auth-container
    .auth-card.card
      h1.text-center.mt-md Welcome Back
      form#login-form(action="/auth/login", method="POST")
        .form-group
          label(for="username") Username
          input#username(type="text", name="username", required)
        .form-group
          label(for="password") Password
          input#password(type="password", name="password", required)
        button.button(type="submit") Sign In
      div
        span Don't have an account?
        a(href=`/auth/register?next=${encodeURIComponent(originalUrl)}`) Register
