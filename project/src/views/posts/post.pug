extends ../layout

block scripts
    script(src="/js/post.js" type="module")

block content
  main.container
    article.card.post-card
      .post-header
        h1= post.title
        .post-meta
          span Posted by #{ post.author }
          span= post.createdAt.toLocaleDateString()

      .post-content
        p= post.content

      .post-actions
        if session.loggedIn
          if session.user.role === 'admin' || session.user.username === post.author
            a.button(href=`/posts/${post.id}/edit`) Edit Post
        a.button.outline(href="/posts") Back to Posts

    section.comment-section
      h3 Comments (Coming Soon)
      p We're working on our commenting system!
