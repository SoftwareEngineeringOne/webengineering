extends ../layout

block content
    h1 Users
    table
        thead
            tr
                th Name
                th Role
                th Actions
        tbody
            each user in users
                tr
                    td= user.username
                    td= user.role
                    td
                        a(href='') View
                        a(href='') Edit
                        a(href='') Delete


        h1 Posts
        table
            thead
                tr
                    th Title
                    th Author
                    th Status
                    th Actions
            tbody
                each post in posts
                    tr
                        td= post.title
                        td= post.author
                        td= post.status
                        td
                            a(href='') View
                            a(href='') Edit
                            a(href='') Delete

