extends layout
block scripts
    script(src="/js/register.js" type="module")

block content
    .auth-form
        .card
            h1 Register
            form(action="/auth/register" id="register-form" method="POST")
                label(for="username") Username:
                input#username(name="username" required type="text")
                label(for="email") Email:
                input#email(name="email" required type="email")
                label(for="password") Password:
                input#password(name="password" required type="password")
                button(type="submit") Submit
