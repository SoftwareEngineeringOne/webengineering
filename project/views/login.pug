doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Login
        link(href="/public/css/styles.css" rel="stylesheet")
    body
    include components/navbar.pug
    h1 Login
        form(action="/auth/login" id="login-form" method="POST")
            label(for="username") Username:
            input#username(name="username" required type="text")
            label(for="password") Password:
            input#password(name="password" required type="password")
            button(type="submit") Submit
        script(src="/public/js/login.js" type="module")
