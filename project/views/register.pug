doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Register
        link(href="/public/css/styles.css" rel="stylesheet")
    body
    include components/navbar.pug
    h1 Register
        form(action="/auth/register" id="register-form" method="POST")
            label(for="username") Username:
            input#username(name="username" required type="text")
            label(for="email") Email:
            input#email(name="email" required type="email")
            label(for="password") Password:
            input#password(name="password" required type="password")
            button(type="submit") Submit
        script(src="/public/js/register.js" type="module")
